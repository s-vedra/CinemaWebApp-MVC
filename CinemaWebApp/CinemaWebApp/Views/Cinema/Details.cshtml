@model MovieProgramViewModel


 

    <div class="cards-style">
      <div class="image">
        <img class="card-img-top" src="@Model.CinemaHall.Movie.Image">
      </div>
      <div class="text">
        <h1 class="card-title">@Model.CinemaHall.Movie.Title</h1>
        <h4 class="card-title">Showing on: <br /> @Model.Date.ToString("dddd, dd MMMM yyyy")</h4>
         <h5 class="card-title">Start Time: @Model.StartTime</h5>
         <h5 class="card-title">End Time: @Model.EndTime</h5>
        <p class="card-text">@Model.CinemaHall.Movie.Description</p>
        <h4>Premiers on:</h4>
        @{
                <p>
                     @foreach (var item in ViewBag.MoviePrograms)
                 {
                        if(Model.CinemaHall.Movie.Title == item.CinemaHall.Movie.Title)
                        {
                                @item.Date.ToString("dddd, dd MMMM yyyy") <br />
                        }
                    
                 }
                </p>
        }
           
       <div class="buttons-cinema">
        <a asp-action="Index" asp-controller="Cinema" class="btn btn-primary">Go Back</a>
        <a asp-action="GetMovieProgram" asp-controller="Reservation" class="btn btn-primary" asp-route-id="@Model.Id">Reserve Online</a>
        </div>    
      </div>
    </div>
    <div class="carousel-details">
  <div class="container-carousel">  
          <h3 class="title-carousel">Check out our other options:</h3>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="hover">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <div class="carousel-content">
                    @for(int i = 0; i<ViewBag.Movies.Count - 5; i++)
                    {
                            
                        <div style="margin: 0 auto">
                            <div class="text-image">
                            <h5>@ViewBag.Movies[i].Title</h5>
                            <p>
                                <img alt="The 2nd Message." src="@ViewBag.Movies[i].Image"
                                      class="d-block" />
                            </p>
                            </div>
                        </div>
                   
                    }
                        </div>   

                          
                </div>
                 <div class="item">
                    <div class="carousel-content">
            @for (int i = 3; i < ViewBag.Movies.Count - 2; i++)
            {
                  
                        <div style="margin: 0 auto">
                            <div class="text-image">
                            <h5>@ViewBag.Movies[i].Title</h5>
                            <p>
                                <img alt="The 2nd Message." src="@ViewBag.Movies[i].Image"
                                      class="d-block" />
                            </p>
                            </div>
                        </div>
             
            }
                   </div>
                </div>
            </div>
            <a  class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-black" aria-hidden="true"></span>
                <span class="sr-only"> Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-black" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</div>