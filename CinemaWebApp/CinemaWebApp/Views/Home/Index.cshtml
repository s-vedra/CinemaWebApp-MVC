@{
    ViewData["Title"] = "Home Page";
}


<div class="slogan">
    <h5 class="text-muted">Don't be late</h5>
    <h1>Book your tickets now</h1>
    <h5 class="text-muted">Easy, Simple & Fast</h5>
</div>
<br />
<div class="button-book">
<a class="book-movie" asp-action="Index" asp-controller="Cinema">Book Ticket</a>
</div>

<div class="movies">
@{
    foreach (var item in ViewBag.Movies)
    {
      <div class="cards-style mt-3">
      <div class="image">
        <img class="card-img-top" src="@item.Image">
      </div>
    </div>
    }
}
</div>